<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">blog_form.blog_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Blog</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">blog_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="Magenest\CustomCustomer\Block\Adminhtml\Form\SaveButton"/>
            <!--            <button name="reset" class="Magenest\MyForm\Block\Adminhtml\Form\Edit\ResetButton"/>-->
<!--            <button name="delete" class="Magenest\Movie\Block\Adminhtml\Form\Edit\DeleteButton"/>-->
            <button name="back" class="Magenest\CustomCustomer\Block\Adminhtml\Form\BackButton"/>
        </buttons>
        <namespace>magenest_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>blog_form.blog_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="blog_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="*/*/save"/>
        </settings>
        <dataProvider class="Magenest\CustomCustomer\Model\System\Config\BlogProvider" name="blog_form_data_source">
            <settings>
                <!-- param url name -->
                <requestFieldName>id</requestFieldName>
                <!-- keys id -->
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <fieldset name="blog_form_fieldset">
        <settings>
            <collapsible>false</collapsible>
            <label>Blog Details</label>
        </settings>
        <field name="id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">blog_form</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>id</dataScope>
                <label>Id</label>
            </settings>
        </field>
        <field name="author_id" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">blog_form</item>
                </item>
            </argument>
            <settings>
                <dataType>select</dataType>
                <visible>true</visible>
                <dataScope>author_id</dataScope>
                <label>Author</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Magenest\CustomCustomer\Model\Source\AuthorOptions"/>
                        <caption translate="true">-- Please Select --</caption>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="title" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">blog_form</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>true</visible>
                <dataScope>title</dataScope>
                <label>Title</label>
            </settings>
        </field>
        <field name="description" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">blog_form</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>true</visible>
                <dataScope>description</dataScope>
                <label>Description</label>
            </settings>
        </field>
        <field name="content" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">blog_form</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>true</visible>
                <dataScope>content</dataScope>
                <label>Content</label>
            </settings>
        </field>
        <field name="url_rewrite" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">blog_form</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>true</visible>
                <dataScope>url_rewrite</dataScope>
                <label>Url</label>
            </settings>
        </field>
<!--        Status-->
        <field name="status" formElement="checkbox">
            <settings>
                <label translate="true">Status</label>
                <tooltip>
                    <description translate="true">This is my checkbox's description</description>
                </tooltip>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <prefer>toggle</prefer>
                        <valueMap>
                            <map name="false" xsi:type="boolean">0</map>
                            <map name="true" xsi:type="boolean">1</map>
                        </valueMap>
                    </settings>
                </checkbox>
            </formElements>
        </field>
    </fieldset>
</form>
