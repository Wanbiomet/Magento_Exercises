<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="magenest_blog" resource="default" engine="innodb" >
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true" comment="Blog Id"/>
        <column xsi:type="int" name="author_id" unsigned="true" nullable="false" comment="Author Id"/>
        <column xsi:type="varchar" length="255" name="title" nullable="false" comment="Blog Title"/>
        <column xsi:type="text" name="description" nullable="false" comment="Blog Description"/>
        <column xsi:type="text" name="content" nullable="false" comment="Blog Description"/>
        <column xsi:type="varchar" name="url_rewrite" nullable="false" length="255" comment="Blog URL Rewrite"/>
        <column xsi:type="smallint" name="status" nullable="false" default="1" comment="Status"/>

        <column xsi:type="timestamp" name="create_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="false" comment="Creation Time"/>
        <column xsi:type="timestamp" name="update_at" nullable="true" on_update="true" default="CURRENT_TIMESTAMP" comment="Update Time"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="ADMIN_USER_FK"
                    table="magenest_blog"
                    column="author_id"
                    referenceTable="admin_user"
                    referenceColumn="user_id"
                    onDelete="CASCADE"/>
        <index referenceId="MAGENEST_BLOG_TITLE_IDX">
            <column name="title"/>
        </index>
    </table>
    <table name="magenest_category" resource="default" engine="innodb" >
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true" comment="Category Id"/>
        <column xsi:type="varchar" length="255" name="name" nullable="false" comment="Category Name"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <index referenceId="MAGENEST_CATEGORY_NAME_IDX">
            <column name="name"/>
        </index>
    </table>
    <table name="magenest_blog_category" resource="default" engine="innodb" >
        <column xsi:type="int" name="blog_id" unsigned="true" nullable="false" comment="Blog Id"/>
        <constraint xsi:type="foreign" referenceId="BLOG_FK"
                    table="magenest_blog_category"
                    column="blog_id"
                    referenceTable="magenest_blog"
                    referenceColumn="id"
                    onDelete="CASCADE"/>
        <column xsi:type="int" name="category_id" unsigned="true" nullable="false" comment="Category Id"/>
        <constraint xsi:type="foreign" referenceId="CATEGORY_FK"
                    table="magenest_blog_category"
                    column="category_id"
                    referenceTable="magenest_category"
                    referenceColumn="id"
                    onDelete="CASCADE"/>
        <index referenceId="BLOG_CATEGORY_BLOG_IDX">
            <column name="blog_id"/>
        </index>
    </table>
</schema>
