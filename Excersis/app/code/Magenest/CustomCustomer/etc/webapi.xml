<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Webapi/etc/webapi.xsd">
    <!-- Service definition for blog CRUD operations -->
    <route url="/V1/blog/:id" method="GET">
        <service class="Magenest\CustomCustomer\Api\BlogRepositoryInterface" method="getById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/blog" method="POST">
        <service class="Magenest\CustomCustomer\Api\BlogRepositoryInterface" method="save"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/blog/:id" method="DELETE">
        <service class="Magenest\CustomCustomer\Api\BlogRepositoryInterface" method="delete"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/blog" method="GET">
        <service class="Magenest\CustomCustomer\Api\BlogRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
