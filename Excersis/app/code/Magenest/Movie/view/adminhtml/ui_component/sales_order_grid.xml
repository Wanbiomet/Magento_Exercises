<?xml version="1.0"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <!-- NÃºt Export -->
        <exportButton name="export_button">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="options" xsi:type="array">
                        <item name="csv" xsi:type="array">
                            <item name="value" xsi:type="string">csv</item>
                            <item name="label" xsi:type="string" translate="true">Export Order Items</item>
                            <item name="url" xsi:type="string">movie/export/oderitems</item>
                        </item>
                    </item>
                </item>
            </argument>
        </exportButton>
    </listingToolbar>
    <columns name="sales_order_columns">
        <column name="odd_even" class="Magenest\Movie\UI\Component\Listing\Column\OddEven">
            <settings>
                <bodyTmpl>ui/grid/cells/html</bodyTmpl>
                <label translate="true">Odd/Even</label>
            </settings>
        </column>
    </columns>
</listing>

