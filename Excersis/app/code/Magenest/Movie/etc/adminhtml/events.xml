<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="customer_save_before">
        <observer name="magenest_movie_change_customer_firstname" instance="Magenest\Movie\Observer\ChangeCustomerFirstname" />
    </event>
    <event name="save_movie">
        <observer name="set_movie_rating" instance="Magenest\Movie\Observer\SetMovieRating" disabled="true"/>
    </event>
    <event name="admin_system_config_changed_section_movie">
        <observer name="custom_textfield_movie" instance="Magenest\Movie\Observer\ChangeValueTextField" />
    </event>
</config>
