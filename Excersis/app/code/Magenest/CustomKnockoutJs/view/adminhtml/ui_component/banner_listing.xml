                <!--                    <item name="2" xsi:type="array">-->
                <!--                        <item name="type" xsi:type="string">sub_action3</item>-->
                <!--                        <item name="label" xsi:type="string" translate="true">Sub action #3</item>-->
                <!--                        <item name="url" xsi:type="url" path="some/path">-->
                <!--                            <param name="some_param">3</param>-->
                <!--                        </item>-->
                <!--                    </item>-->
                <!--                </argument>-->
            </action>
        </massaction>
    </listingToolbar>
    <columns name="banner_listing_columns">
        <selectionsColumn name="ids">
            <settings>
                <indexField>banner_id</indexField>
            </settings>
        </selectionsColumn>
        <!-- Column id -->
        <column name="banner_id" sortOrder="10">
            <settings>
                <filter>dateRange</filter>
                <label translate="true">ID</label>
            </settings>
        </column>
        <!-- Column author id -->
        <column name="name" sortOrder="15">
            <settings>
                <filter>text</filter>
                <label translate="true">Name</label>
            </settings>
        </column>

        <column name="title" sortOrder="20">
            <settings>
                <filter>text</filter>
                <label translate="true">Title</label>
            </settings>
        </column>

        <column name="image" class="Magenest\CustomKnockoutJs\Ui\Component\Listing\Column\Thumbnail" component="Magento_Ui/js/grid/columns/thumbnail">

            <settings>
                <label translate="true">Banner</label>
            </settings>
        </column>

        <column name="link" sortOrder="40" >
            <settings>
                <filter>text</filter>
                <label translate="true">Link</label>
            </settings>
        </column>

        <column name="text" sortOrder="40" >
            <settings>
                <filter>text</filter>
                <label translate="true">Text</label>
            </settings>
        </column>
