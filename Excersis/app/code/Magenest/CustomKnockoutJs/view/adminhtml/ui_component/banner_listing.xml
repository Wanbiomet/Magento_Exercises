                <!--                        <item name="type" xsi:type="string">sub_action2</item>-->
                <!--                        <item name="label" xsi:type="string" translate="true">Sub action #2</item>-->
                <!--                        <item name="url" xsi:type="url" path="some/path">-->
                <!--                            <param name="some_param">2</param>-->
                <!--                        </item>-->
